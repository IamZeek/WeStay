{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "System": "Warning"
    }
  },
  "AllowedHosts": "*",

  "JwtSettings": {
    "Secret": "your-super-secret-jwt-key-minimum-32-characters-long",
    "Issuer": "WeStay.ApiGateway",
    "Audience": "WeStay-Services",
    "ExpiryInMinutes": 60
  },

  "Ocelot": {
    "Routes": [
      {
        "DownstreamPathTemplate": "/api/v1/messaging/{everything}",
        "DownstreamScheme": "https",
        "DownstreamHostAndPorts": [
          {
            "Host": "localhost",
            "Port": 7001
          }
        ],
        "UpstreamPathTemplate": "/api/v1/messaging/{everything}",
        "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
        "AuthenticationOptions": {
          "AuthenticationProviderKey": "Bearer",
          "AllowedScopes": []
        },
        "AddHeadersToRequest": {
          "X-User-Id": "Claims[sub] > value",
          "X-User-Roles": "Claims[role] > value > |"
        }
      },
      {
        "DownstreamPathTemplate": "/api/v1/booking/{everything}",
        "DownstreamScheme": "https",
        "DownstreamHostAndPorts": [
          {
            "Host": "localhost",
            "Port": 7002
          }
        ],
        "UpstreamPathTemplate": "/api/v1/booking/{everything}",
        "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
        "AuthenticationOptions": {
          "AuthenticationProviderKey": "Bearer",
          "AllowedScopes": []
        }
      },
      {
        "DownstreamPathTemplate": "/api/v1/property/{everything}",
        "DownstreamScheme": "https",
        "DownstreamHostAndPorts": [
          {
            "Host": "localhost",
            "Port": 7003
          }
        ],
        "UpstreamPathTemplate": "/api/v1/property/{everything}",
        "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
        "AuthenticationOptions": {
          "AuthenticationProviderKey": "Bearer",
          "AllowedScopes": []
        }
      },
      {
        "DownstreamPathTemplate": "/api/v1/payment/{everything}",
        "DownstreamScheme": "https",
        "DownstreamHostAndPorts": [
          {
            "Host": "localhost",
            "Port": 7004
          }
        ],
        "UpstreamPathTemplate": "/api/v1/payment/{everything}",
        "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
        "AuthenticationOptions": {
          "AuthenticationProviderKey": "Bearer",
          "AllowedScopes": []
        }
      }
    ],
    "GlobalConfiguration": {
      "BaseUrl": "https://localhost:7000",
      "RequestIdKey": "OcelotRequestId"
    }
  },

  "RateLimiting": {
    "ClientWhitelist": [],
    "EnableRateLimiting": true,
    "HttpStatusCode": 429,
    "QuotaExceededMessage": "Too many requests. Please try again later.",
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },

  "Caching": {
    "TtlSeconds": 300
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/apigateway-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://westay.com",
      "https://app.westay.com"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "Content-Type", "Authorization", "X-Requested-With" ]
  },

  "HealthChecks": {
    "Enabled": true,
    "Endpoint": "/health",
    "Timeout": 30
  },

  "Application": {
    "Name": "WeStay.ApiGateway",
    "Version": "1.0.0",
    "Environment": "Development"
  }
}