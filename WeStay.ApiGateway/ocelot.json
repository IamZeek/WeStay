{
  "Routes": [
    // Public routes (no authentication)
    {
      "DownstreamPathTemplate": "/api/v1/auth/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7005
        }
      ],
      "UpstreamPathTemplate": "/api/v1/auth/{everything}",
      "UpstreamHttpMethod": [ "POST", "OPTIONS" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/public/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7006
        }
      ],
      "UpstreamPathTemplate": "/api/v1/public/{everything}",
      "UpstreamHttpMethod": [ "GET", "OPTIONS" ]
    },

    // Private routes (require authentication)
    {
      "DownstreamPathTemplate": "/api/v1/messaging/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7001
        }
      ],
      "UpstreamPathTemplate": "/api/v1/messaging/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    }
  ]
}